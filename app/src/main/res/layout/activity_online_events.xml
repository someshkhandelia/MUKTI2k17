<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.somesh1995.mukti2017.Online_events">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/heading_online"
        android:background="#000000"
        android:alpha="0.4">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Online Events"
            android:id="@+id/online_events_text"
            android:layout_gravity="center_horizontal|top"
            android:gravity="center"
            android:textColor="#FFFFFF"/>

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/heading_online"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/onel1"
                android:gravity="center">

                <ImageButton
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:id="@+id/onei1"
                    android:src="@drawable/cc"
                    android:scaleType="fitCenter"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/onet1"
                    android:layout_below="@+id/oei1"
                    android:text="Event 1"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/onel2"
                android:gravity="center">

                <ImageButton
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:id="@+id/onei2"
                    android:src="@drawable/fp"
                    android:scaleType="fitCenter"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/onet2"
                    android:layout_below="@+id/oei1"
                    android:text="Event 2"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/onel3"
                android:gravity="center">

                <ImageButton
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:id="@+id/onei3"
                    android:src="@drawable/fx"
                    android:scaleType="fitCenter"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/onet3"
                    android:layout_below="@+id/oei1"
                    android:text="Event 3"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/onel4"
                android:gravity="center">

                <ImageButton
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:id="@+id/onei4"
                    android:src="@drawable/cc"
                    android:scaleType="fitCenter"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/onet4"
                    android:layout_below="@+id/oei1"
                    android:text="Event 4"
                    android:gravity="center"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </LinearLayout>






        </LinearLayout>
    </ScrollView>


</RelativeLayout>
